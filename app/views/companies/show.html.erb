<p id="notice"><%= notice %></p>

<h1><strong><%= @company.name %></strong></h1>
<div class="well">

  <%= form_with( model: [ @company, @employee ], local: true) do |form| %>
    <div class="field">
      <%= form.label :first_name %>
      <%= form.text_field :first_name, class: "form-control" %>
    </div>

    <div class="field">
      <%= form.label :last_name %>
      <%= form.text_field :last_name, class: "form-control" %>
    </div>

    <div class="field">
      <%= form.label :email %>
      <%= form.email_field :email, class: "form-control" %>
    </div>

    <div class="field">
      <%= form.label :area %>
      <%= form.select :area_id, Area.pluck(:name, :id), class: "form-control" %>
    </div>

    <div class="actions">
      <%= form.submit %>
    </div>

  <% end %>

</div>

<h1><strong>Employees</strong></h1>
<table class="table table-bordered">

<tr>
  <th>First Name</th>
  <th>Last Name</th>
  <th>Email</th>
  <th>Area</th>
  <th>Delete</th>

</tr>

<tr>
  <% @company.employees.each do |employee| %>

  <td><%= employee.first_name %></td>
  <td><%= employee.last_name %></td>
  <td><%= employee.email %></td>
  <td><%= employee.area.name %></td>
  <td><%= link_to 'Delete', company_employee_path(@company , employee) , method: :delete, class: "btn btn-danger btn-sm" %></td>
  </td>


</tr>
<% end %>

</table>
<div class="btn-group btn">
  <%= link_to 'Edit', edit_company_path(@company), class: "btn btn-default" %>
  <%= link_to 'Back', companies_path,  class: "btn btn-default" %>
</div>
